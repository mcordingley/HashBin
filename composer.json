{
    "name": "mcordingley/hash-bin",
    "description": "A small helper to bin your things.",
    "type": "library",
    "authors": [
        {
            "name": "Michael Cordingley",
            "email": "Michael.Cordingley@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "mcordingley\\HashBin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "mcordingley\\HashBinTests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "paragonie/sodium_compat": "^1.7"
    },
    "suggest": {
        "paragonie/sodium_compat": "Enables use of Sip24 hasher on PHP versions older than 7.2.",
        "ext-sodium": "Enables use of Sip24 hasher on PHP versions older than 7.2."
    }
}
